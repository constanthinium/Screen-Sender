<Window x:Class="Screen_Sender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Screen_Sender"
        mc:Ignorable="d"
        Title="Screen Sender" Height="480" Width="640">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Name="clientMenuItem" Header="Client">
                <MenuItem Header="Send" Click="SendMenuItem_Click" />
                <MenuItem Header="Receive" Click="ReceiveMenuItem_Click" />
            </MenuItem>
            <MenuItem Header="Help" Click="HelpMenuItem_Click" />
        </Menu>
        <Frame Name="frame" Grid.Row="1" />
    </Grid>
</Window>
